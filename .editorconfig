# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# A newline ending every file. 2 spaces.
[*]
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf

[Makefile]
indent_size = 2
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Windows files
[*.bat]
end_of_line = crlf
